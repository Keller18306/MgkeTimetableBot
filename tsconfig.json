{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build/",
        "removeComments": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "importHelpers": true,
        "sourceMap": true,
        "types": [
            "node",
            "./src/@types/viber-bot"
        ]
    },
    "ts-node": {
        "files": true,
        // "transpileOnly": true // skip type check, but faster compile
    },
    "exclude": [
        "build",
        "node_modules",
        "@types"
    ]
}